<body class = "VerTareas">
    <h1>Tus Tareas</h1>
<div id="id01" class="w3-modal">
    <div class="w3-modal-content">
      <div class="w3-container">
        <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
        <form action='@Url.Action("ModificarTarea","Home")' method="post">
          <p>Titulo</p>
          <p><input type="text" name="titulo" id="titulo"  required></p>
          <input type="hidden" name="IDTarea" id="IDTarea"  required>
          <input type="hidden" name="finalizada" id="finalizada"  required>

          <p>Descripcion</p>
          <p><input type="text" name="descripcion"  id="descrip" required></p>

          <p><input type="submit" value="Enviar"></p>
          </form>
      </div>
    </div>
  </div>    


    @foreach (Tarea tarea in ViewBag.listaTareas)
    {
        <h4>@tarea.titulo</h4>
        <p>@tarea.descripcion</p>
        <p>@tarea.fecha</p>
        if(tarea.finalizada){
          <p>FINALIZADA</p>
        }
        else{
          <p>NO FINALIZADA</p>

        }

        <div class="w3-container">
        <button onclick="abrirModal('@tarea.titulo','@tarea.descripcion','@tarea.IDTarea','@tarea.finalizada')" class="w3-button w3-black">Modificar Tarea</button>
</div>
    }
  


<div class="w3-container">
  <button onclick="AbrirNuevaTarea()" class="w3-button w3-black">Agregar Tarea</button>


<script>
  function abrirModal(titulo, descrip)
  {
    document.getElementById('id01').style.display='block';
    document.getElementById("titulo").value = titulo;
    document.getElementById("descrip").value = descrip;
    document.getElementById("IDTarea").value = IDTarea;
    document.getElementById("finalizada").value = finalizada;
    
  }
  function AbrirNuevaTarea()
  {
    document.getElementById('id01').style.display='block';
  }
</script>     
</body>