<body class = "VerTareas">
    <h1>Tus Tareas</h1>
    
    <!-- Botón para abrir el modal de creación -->
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearTareaModal">
        Nueva tarea
    </button>

    @foreach (Tarea tarea in ViewBag.listaTareas)
    {
        <h4>@tarea.titulo</h4>
        <p>@tarea.descripcion</p>
        <p>@tarea.fecha</p>
        <p>@tarea.finalizada</p>
          <!-- Botón para abrir el modal -->
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modal-@tarea.IDTare">
            Editar
        </button>

        <!-- Modal -->
        <div class="modal fade" id="modal-@tarea.IDTarea" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Editar tarea</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form action='Url.Action("ModificarTarea","Home")' method="post" enctype="multipart/form-data"> 
                        <p>Titulo</p>
                        <p><input type="text" name="titulo" required></p>

                        <p>Descripcion</p>
                        <p><input type="text" name="descripcion" required></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <a href='Url.Action("FinalizarTarea", "Home")'></a>
    }

    <!-- Modal para crear nueva tarea -->
    <div class="modal fade" id="crearTareaModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear nueva tarea</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("NuevaTarea", "Home", FormMethod.Post))
                    {
                        <div class="mb-3">
                            @Html.Label("Titulo")
                            @Html.TextBox("Titulo", null, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            @Html.Label("Descripcion")
                            @Html.TextArea("Descripcion", null, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            @Html.Label("Fecha")
                            @Html.TextBox("Fecha", null, new { type = "date", @class = "form-control" })
                        </div>
                        <div class="mb-3 form-check">
                            @Html.CheckBox("Finalizada", false, new { @class = "form-check-input" })
                            @Html.Label("Finalizada", new { @class = "form-check-label" })
                        </div>

                        <button type="submit" class="btn btn-success">Crear tarea</button>
                    }
                </div>
            </div>
        </div>
    </div>


</body>